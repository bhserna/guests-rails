<% default_title = "Software para administrar la lista de invitados para tu evento." %>
<!DOCTYPE html>
<html>
  <head>
    <title>Simple Guest List | <%= content_for(:title) || default_title %></title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.4/css/selectize.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.4/css/selectize.default.min.css" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.4/js/standalone/selectize.min.js"></script>
    <script src="https://use.fontawesome.com/6ab7fce2e2.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="body">
    <div class="bar">
      <%= link_to root_path, class: "logo" do %>
        <span>Simple Guest List</span>
      <% end %>
      <a href="#" class="btn btn--sm bar__menu-control js-bar-menu-control">
        <span class="fa fa-bars" aria-hidden="true"></span>
      </a>
      <div class="bar__buttons">
        <% if current_admin? %>
          <% if ENV["ADMIN_ENABLED"] == "true" %>
            <%= link_to "Listas", admin_lists_path, class: "btn btn--sm" %>
            <%= link_to "Usuarios", admin_users_path, class: "btn btn--sm" %>
          <% end %>
        <% end %>

        <% if current_user? %>
          <%= link_to "Mis listas", lists_path, class: "btn btn--sm btn--blue" %>
          <%= button_to "Cerrar sesión", session_path, method: :delete, class: "btn btn--sm" %>
        <% else %>
          <%= link_to "Registrarme", new_registration_path, class: "btn btn--sm btn--blue" %>
          <%= link_to "Iniciar sesión", new_session_path, class: "btn btn--sm btn--blue" %>
        <% end %>
      </div>
    </div>

    <% if flash[:alert].present? %>
      <div class="alert alert--contained alert--error">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <% if flash[:notice].present? %>
      <div class="alert alert--contained alert--info">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= yield %>

    <%= link_to support_page_path, class: "support-btn btn btn--sm btn--blue" do %>
      <span class="fa fa-question-circle"></span>
      <span>Soporte</span>
    <% end %>


    <% if Rails.env.production? %>
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-27852631-4', 'auto');
        ga('send', 'pageview');
      </script>
    <% end %>
  </body>
</html>
