<%= form_for form, as: :user, url: registrations_url, method: :post, html: {class: "form"} do |f| %>
  <h1 class="form-title">Registrarme</h1>

  <%= form_group f, :first_name %>
  <%= form_group f, :last_name %>
  <%= form_group f, :email, field_method: :email_field %>
  <%= form_group f, :user_type,
    field_method: :select,
    select_options: form.user_type_options.map { |option| option.values_at(:text, :value) } %>
  <%= form_group f, :password, field_method: :password_field %>
  <%= form_group f, :password_confirmation, field_method: :password_field %>

  <%= f.button "Registrarme", class: "btn btn--md btn--blue" %>
<% end %>
