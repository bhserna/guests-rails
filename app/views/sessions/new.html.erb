  <h1 class="form-title">Iniciar sesi√≥n</h1>

  <% if local_assigns[:error].present? %>
    <div class="alert alert--error">
      <%= local_assigns[:error] %>
    </div>
  <% end %>

  <%= form_group f, :email %>
  <%= form_group f, :password, field_method: :password_field %>
