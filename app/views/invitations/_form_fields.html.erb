<%= form_group f, :title,
  label: "Título o rótulo de la invitación",
  control_options: {placeholder: "Ejemplo: Familia Garza"} %>
<%= form_group f, :guests,
  label: "Nombres de los invitados",
  control_class: "js-selectize--guests",
  control_options: {placeholder: "Ejemplo: Juan, Karla"} %>
<%= form_group f, :group, label: "Grupo social",
  field_method: :select,
  choices: groups,
  select_options: {include_blank: true},
  control_class: "js-selectize--group",
  control_options: {placeholder: "Ejemplo: Familia del novio"} %>
<%= form_group f, :email, field_method: :email_field, label: "Email de contacto" %>
<%= form_group f, :phone, field_method: :phone_field, label: "Teléfono de contacto" %>
