<%= form_for form, as: :invitation, url: list_invitation_path(list_id, invitation_id),
   method: :patch, html: {class: "form js-invitation-form invitation-form"} do |f| %>
    <h1 class="form-title">Editar invitación</h1>
    <%= form_group f, :title, label: "Título" %>
    <%= form_group f, :guests, label: "Invitados", control_class: "js-selectize-guests" %>
    <%= form_group f, :email %>
    <%= form_group f, :phone, label: "Teléfono" %>
    <%= f.button "Actualizar", class: "btn btn--md btn--blue" %>
    <%= link_to "Cancelar", list_path(list_id), method: :get, class: "btn btn--md" %>
<% end %>