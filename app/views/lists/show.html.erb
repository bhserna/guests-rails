<div class="list">
  <h1 class="list__title"><%= list.name %></h1>

  <table class="table">
    <thead>
      <tr>
        <th>Título</th>
        <th>Invitados</th>
        <th>Teléfono</th>
        <th>Email</th>
        <th>¿Entregada?</th>
        <th>Confirmados</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>


  <%= form_for invitation_form, as: :invitation, url: list_invitations_path(list.id), method: :post, html: {class: "form"} do |f| %>
    <h1 class="form-title">Agregar invitación</h1>
    <%= form_group f, :title %>
    <%= form_group f, :guests %>
    <%= f.button "Agregar", class: "btn btn--md btn--blue" %>
  <% end %>
</div>
