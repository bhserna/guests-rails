<div class="lists">
  <h1 class="lists__title">Mis listas</h1>
  <div class="lists__btn-box">
    <%= link_to "Crear lista", new_list_path, class: "btn btn--sm btn--blue" %>
  </div>

  <ul>
    <% lists.each do |list| %>
      <li><%= link_to list.name, list_path(list.id), class: "lists__list-link" %></li>
    <% end %>
  </ul>
</div>
